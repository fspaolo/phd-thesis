  file = {cook_areal_changes_antpen_2010:/Users/fpaolo/Library/Application Support/Zotero/Profiles/4rqgyim7.default/zotero/storage/W4INTCWG/cook_areal_changes_antpen_2010.pdf:application/pdf}
