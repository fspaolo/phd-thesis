  shortjournal = {Earth and Planetary Science Letters},
  author = {Harig, Christopher and Simons, Frederik J.},
  urldate = {2015-06-05},
  date = {2015-04-01},
  pages = {134--141},
  keywords = {Antarctica,climate,satellite measurements,time-variable gravity},
